{
  "name": "isensei-monorepo",
  "packageManager": "yarn@3.1.1",
  "private": true,
  "scripts": {
    "dev": "turbo run dev --parallel --no-cache",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "build": "turbo run build",
    "clean": "turbo run clean",
    "res:build": "rescript build -with-deps",
    "res:clean": "rescript clean",
    "res:start": "rescript build -w -with-deps",
    "prepublish": "lerna run prepublish",
    "publish-canary": "lerna version prerelease --preid canary --force-publish",
    "publish-stable": "lerna version --force-publish && release && node ./scripts/release-notes.js",
    "prepare": "husky install"
  },
  "turbo": {
    "baseBranch": "origin/main",
    "pipeline": {
      "build": {
        "dependsOn": [
          "^build"
        ],
        "outputs": [
          ".next/**"
        ]
      },
      "test": {
        "dependsOn": [
          "^build"
        ],
        "outputs": []
      },
      "lint": {
        "outputs": []
      },
      "dev": {
        "cache": false
      },
      "clean": {
        "cache": false
      }
    }
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "lint-staged": {
    "*.+(js|jsx|ts|tsx|mjs)": [
      "eslint --fix"
    ],
    "*.+(js|jsx|mjs|ts|tsx|json|css|md|mdx)": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^16.0.0",
    "@commitlint/config-conventional": "^16.0.0",
    "@rescript/react": "^0.10.3",
    "husky": "^7.0.4",
    "isensei-eslint": "*",
    "lint-staged": "^12.1.3",
    "rescript": "^9.1.4",
    "turbo": "^1.0.21"
  },
  "dependencies": {
    "@ryyppy/rescript-promise": "^2.1.0",
    "bs-css-emotion": "^4.0.2",
    "bs-webapi": "^0.19.1",
    "rescript-logger": "^2.0.2",
    "rescript-nodejs": "^14.2.0"
  }
}
