{
  "name": "isensei-blog",
  "version": "1.1.2",
  "private": true,
  "scripts": {
    "start": "node ./scripts/next-remote-watch.js ./data",
    "dev": "yarn run clean && TAILWIND_MODE=watch next dev",
    "build": "prisma generate --schema=./prisma/schema.prisma && next build && node ./scripts/generate-sitemap",
    "serve": "next start",
    "analyze": "cross-env ANALYZE=true next build",
    "lint": "next lint --fix --dir pages --dir components --dir lib --dir layouts --dir scripts",
    "prepare": "husky install",
    "clean": "rm -rf ./.next",
    "prisma:generate": "npx prisma generate",
    "prisma:migrate": "npx prisma migrate dev",
    "prisma:studio": "npx prisma studio",
    "pscale:shadow": "pscale connect isensei shadow --port 3310",
    "pscale:dev": "pscale connect isensei dev --port 3309",
    "pscale:main": "pscale connect isensei main --port 3309",
    "compose": "node ./scripts/compose.js"
  },
  "dependencies": {
    "@headlessui/react": "^1.4.2",
    "@mailchimp/mailchimp_marketing": "^3.0.72",
    "@next-auth/prisma-adapter": "next",
    "@prisma/client": "^3.4.2",
    "@tailwindcss/forms": "^0.3.4",
    "@tailwindcss/typography": "^0.4.1",
    "autoprefixer": "^10.4.0",
    "esbuild": "^0.13.12",
    "github-slugger": "^1.4.0",
    "gray-matter": "^4.0.3",
    "image-size": "1.0.0",
    "mdx-bundler": "^7.0.0",
    "next": "12.0.7",
    "next-auth": "beta",
    "next-compose-plugins": "^2.2.1",
    "next-themes": "^0.0.15",
    "next-translate": "^1.2.0",
    "next-transpile-modules": "^9.0.0",
    "postcss": "^8.3.11",
    "preact": "^10.6.4",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "reading-time": "1.5.0",
    "rehype-autolink-headings": "^6.1.0",
    "rehype-katex": "^6.0.1",
    "rehype-prism-plus": "^1.1.1",
    "rehype-slug": "^5.0.0",
    "remark-footnotes": "^4.0.1",
    "remark-gfm": "^3.0.1",
    "remark-math": "^5.1.0",
    "sharp": "^0.29.2",
    "smoothscroll-polyfill": "^0.4.4",
    "tailwindcss": "^2.2.19",
    "ui": "*",
    "unist-util-visit": "^4.1.0"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "12.0.3",
    "@svgr/webpack": "^5.5.0",
    "cross-env": "^7.0.3",
    "dedent": "^0.7.0",
    "eslint": "7.32.0",
    "eslint-config-next": "12.0.3",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^4.0.0",
    "file-loader": "^6.2.0",
    "globby": "11",
    "husky": "^7.0.4",
    "inquirer": "^8.2.0",
    "lint-staged": "^11.2.6",
    "next-remote-watch": "^1.0.0",
    "prettier": "2.4.1",
    "prisma": "^3.4.2",
    "socket.io": "^4.3.2",
    "socket.io-client": "^4.3.2"
  },
  "lint-staged": {
    "*.+(js|jsx|ts|tsx)": [
      "eslint --fix"
    ],
    "*.+(js|jsx|ts|tsx|json|css|md|mdx)": [
      "prettier --write"
    ]
  }
}
